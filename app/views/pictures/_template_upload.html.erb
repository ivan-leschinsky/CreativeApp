<script id="template-upload" type="text/x-tmpl">
  {% for (var i = 0, file; file = o.files[i]; i++) { %}
  <tr class="template-upload fade">
    <td class="preview"><span class="fade"></span></td>
    {% if (file.error) { %}
    <td class="error"><span class="label label-important">ERROR</span> {%=locale.fileupload.errors[file.error] || file.error%}</td>
    {% } else if (o.files.valid && !i) { %}
    <td>
      <div class="progress success"><div class="bar meter" style="width:0%;"></div></div>
    </td>
    <td class="start">
      <button class="button button-primary">
        <span>{%=locale.fileupload.start%}</span>
      </button>
    </td>
    <td class="cancel">{% if (!i) { %}
      <button class="button button-warning">
        <span>CANCEL</span>
      </button>
      {% } %}</td>
  </tr>
  {% } %}
</script>
<%= form_for [@creative, @creative.comments.build], :remote => true,
                                            :method => :post,
                                            'data-type' => 'json',
                                            :html => {:class => 'pure-form'} do |f| %>
  <fieldset class="pure-group">
    <%= f.text_area :body, :rows => 10 %>
  </fieldset>
  <%= f.submit :class => "pure-button pure-button-success", :value => "Submit comment" %>
<% end %>
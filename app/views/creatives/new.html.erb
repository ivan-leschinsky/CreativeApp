    </div> 
  </div>
  <div class="small-3 columns">
    <label class="right inline"><%= t('tags')%></label>
  </div>
  <div class="small-9 columns">
    <%= f.text_field :tag_tokens %> 
  </div>
    <div class="small-9 small-offset-3 columns">
      <button type="submit" class="button success radius right"><%= t('.create')%></button>
    </div>

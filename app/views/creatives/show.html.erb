<div class="creative" data-comments=<%= creative_comments_path(@creative) %>>


  <fieldset class="medium-12 columns">
    <legend>
      <h2><%= best_in_place_if @creative.author?(current_user), @creative, :name, :type => :input, :activator => "#editme"%><a id="editme" class="foundicon-edit right" href="#"></a></h2>
    </legend>
    <h1><%= best_in_place @creative, :description, :nil => "click me", :type => :textarea %></h1>
      <span class="right"><%= link_to @creative.user.nickname.present? ? @creative.user.nickname : @creative.user.email, @creative.user %></span>
  </fieldset>
    <h1><%= link_to "", new_creative_chapter_path(@creative), :class => "foundicon-add-doc" if  @creative.author?(current_user) %></h1>
  <div class="row">
      <div id="sortable-grid" class="small-block-grid-1 medium-block-grid-2 large-block-grid-4" data-url="<%= reorder_path(@creative) %>">
        <% @chapters.each do |chapter| %>
          <li id="<%= chapter.id %>">
              <div class="th panel chapter-item">
              <ul class='button-group right'>
                <% if @creative.author?(current_user) %>
                  <%= link_to "", edit_creative_chapter_path(@creative, chapter), :class => "foundicon-tools" %>
                  <%= link_to "", creative_chapter_path(@creative, chapter), method: :delete, data: { confirm: "are you sure?" }, :class => "foundicon-trash" %>
                <% end %>
              </ul>
                  <p><b><%= chapter.name%></b></p>
                  <p class="markdown-source"><%= chapter.body + "..." %></p>
              </div>
          </li>
        <% end %>
      </div>
  </div>

  <br><br><br><br>


<% unless @creative.pictures.empty? %>
  <ul class="clearing-thumbs" data-clearing>
    <% @creative.pictures.each do |picture| %>
      <li><a class="th" href="<%= picture.file.url%>"><img src="<%= picture.file.thumb.url%>"></a></li>
    <% end %>
  </ul>
<% else %>
  <p> No images :( </p>
<% end %>
<br>
<div class="right">
  <%= link_to "Manage Pictures", creative_pictures_path(@creative), :class => "small button secondary" %>
</div>
<br><br><br><br>
<%= render 'comments/show' %>
<%= render 'comments/form' %>

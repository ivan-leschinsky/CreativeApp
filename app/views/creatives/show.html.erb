<p id="notice"><%= notice %></p>



<div class="creative" data-comments=<%= creative_comments_path(@creative) %>>


<p>
  <strong>Name:</strong>
  <%= @creative.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @creative.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @creative.user_id %>
</p>


<%= link_to 'Add Chapter', new_creative_chapter_path(@creative) %>


<h1>Listing chapters</h1>
    <% @creative.chapters.each do |chapter| %>
      <div class=<%= "chapter_#{chapter.id}" %>>
        <h3><%= chapter.name %></h3>
        <div class="markdown-source" id="markdown-source"><%= chapter.body %></div>
        <div class="chapter-body"></div>
        	<%= link_to 'Edit', edit_creative_chapter_path(@creative, chapter) %> |
        	<%= link_to 'Destroy', creative_chapter_path(@creative, chapter), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
<%= link_to 'Edit', edit_creative_path(@creative) %> |
<%= link_to 'Back', creatives_path %>


<% unless @creative.pictures.empty? %>
  <ul class="clearing-thumbs" data-clearing>
    <% @creative.pictures.each do |picture| %>
      <li><a class="th" href="<%= picture.file.url%>"><img src="<%= picture.file.thumb.url%>"></a></li>
    <% end %>
  </ul>
<% else %>
  <p> No images :( </p>
<% end %>

<%= link_to "Manage Pictures", creative_pictures_path(@creative) %>


<%= render 'comments/show' %>
<%= render 'comments/form' %>
